.nav_header
	width: 240px
	height: 80px
	background-color: #353643
	.btn-burger
		height: 100%
		width: 80px
		background-color: colorCorp
		display: flex
		flex-direction: column
		justify-content: center
		align-items: center
		font-size: 9px
		cursor: pointer
		&__item
			width 30px
			border 2px solid #fff
			margin-bottom: 4px
	.nav__menu
		display: none

.nav_header.active
	position: relative
	.nav__menu
		position: absolute
		top: 80px
		left: 0px
		display: flex
		background-color: rgba(78, 168, 213, 0.3)
		padding: 20px 0 10px;
	.nav
		&__item:first-child
			.nav__link::after
				transform translateY(10px)
		&__link:hover::after
			transform translateY(10px)